<div class="page-title">
	<div class="container">
		<div class="row">
			<ul class="breadcrumbs">
				<li>
					<a class="breadcrumbs__item breadcrumbs__item--link" href="/">Home</a>
				</li>

                {% for crumb in breadcrumbs %}
                    {% if not loop.last %}
                        <li>
							<a class="breadcrumbs__item breadcrumbs__item--link" href="{{ crumb.url }}" >{{ crumb.name }}</a>
						</li>
                    {% else %}
                        <li>
							<span class="breadcrumbs__item breadcrumbs__item--text active">{{ crumb.name }}</span>
						</li>
                    {% endif %}
                {% endfor %}
			</ul>
            
			<h1 class="breadcrumbs__heading heading heading--h1 heading--primary" data-anim-fade-in-right>{{ page_title }}</h1>
		</div>
	</div>
</div>